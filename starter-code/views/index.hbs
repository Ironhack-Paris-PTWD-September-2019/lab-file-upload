<h1>Welcome {{user.username}} to IronTumblr</h1>

{{#unless user}}
<p>
  <a href="/signup">Signup</a> or <a href="/login">Login</a>
</p>
{{else}}
<p>
  <a href="/logout">Logout</a>
</p>
{{/unless}}

<div>
  {{#each posts}}
      <img src="{{picPath}}" alt>
      <h4>{{content}}</h4>
      <p>{{creatorId}}</p>
  {{else}}
    <p>There are no movies yet! :(</p>
  {{/each}}
</div>