
<form action="/posts/new" method="post" enctype="multipart/form-data">
  <p>
    <label>
      Text:
      <input type="text" name="content">
    </label>
  </p>
  <p>
    <label>Picture
    <input type="file" name="photo">
    </label>
  </p>
  {{#if errorMessage}}
  <div class="error-message">{{errorMessage}}</div>
  {{/if}}

  <button type="submit">Post</button>
</form>
